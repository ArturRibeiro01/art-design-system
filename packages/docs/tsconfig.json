{
  "extends": "@art-design-systems/tsconfig/react.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["react", "react-dom", "vite/client", "mdx"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "paths": {
      "@art-design-systems/react-components": ["../react-components/dist"],
      "@art-design-systems/react-components/*": ["../react-components/dist/*"],
      "@art-design-systems/tokens": ["../tokens/dist"],
      "@art-design-systems/tokens/*": ["../tokens/dist/*"]
    }
  },
  "include": ["src", "mdx-types.d.ts", "src/types/**/*.d.ts", "**/*.ts", "**/*.tsx"],
  "references": [{ "path": "../react-components" }]
}