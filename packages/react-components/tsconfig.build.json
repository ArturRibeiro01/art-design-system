{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@art-design-systems/tokens": ["../tokens/dist"],
      "@art-design-systems/tokens/*": ["../tokens/dist/*"]
    }
  },

  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
