{
  "name": "@art-design-systems/react-components",
  "version": "0.0.1",
  "description": "React UI components for Art Design System",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/index.css",
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./index.css": "./dist/index.css"
  },
  "sideEffects": ["./dist/index.css"],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --dts-resolve --out-dir dist --external react,react-dom --tsconfig tsconfig.build.json && [ -f src/index.css ] && cp src/index.css dist/index.css || true && cp ./package.dist.json ./dist/package.json",
    "dev": "tsup src/index.ts --format esm,cjs --dts --dts-resolve --out-dir dist --external react,react-dom --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": ["react", "ui", "components", "design-system", "art"],
  "author": "Artur Ribeiro",
  "license": "MIT",
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "devDependencies": {
    "@art-design-systems/eslint-config": "*",
    "@art-design-systems/tokens": "*",
    "@art-design-systems/tsconfig": "*",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "react": "^19.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.17.4"
  }
}